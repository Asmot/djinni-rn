CC=emcc
CXX=emcc

ROOT=$(shell git rev-parse --show-toplevel)
LIB_DIR=$(ROOT)/support-lib
GEN_DIR=$(ROOT)/examples/generated-src
IMP_DIR=$(ROOT)/examples/handwritten-src/cpp

TARGET ?= demo_cpp.js
SRC_DIRS ?= $(LIB_DIR)/wasm $(GEN_DIR)/wasm $(IMP_DIR) .

SRCS := $(shell find $(SRC_DIRS) -name *.cpp)
OBJS := $(addsuffix .o,$(basename $(SRCS)))
DEPS := $(OBJS:.o=.d)

# INC_DIRS := $(shell find $(SRC_DIRS) -type d) $(LIB_DIR)
INC_DIRS := $(GEN_DIR)/cpp $(LIB_DIR) $(LIB_DIR)/wasm $(IMP_DIR)
INC_FLAGS := $(addprefix -I,$(INC_DIRS))

CPPFLAGS ?= $(INC_FLAGS) -MMD -MP -std=c++17 --bind
LDFLAGS ?= --bind -s WASM=1 -s MODULARIZE=1 -s EXPORT_NAME=client -s WASM_BIGINT=1

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $@ $(LOADLIBES) $(LDLIBS)

.PHONY: clean
clean:
	$(RM) $(TARGET) $(OBJS) $(DEPS)

-include $(DEPS)
